@model Faktura.Areas.Radnik.Models.FakturaDodajVM

@{
    ViewData["Title"] = "Faktura";
    Layout = "_LayoutRadnik";

}
<div class="container border-info" style="width: 400px">
    <h4>Pripremi fakturu</h4>
    <form asp-controller="Faktura" asp-action="Dodaj" method="post">
        <input asp-for="@Model.FakturaId" value="@Model.FakturaId" hidden="hidden" />
        <div class="form-group">
            <input hidden="hidden" asp-for="@Model.RadnikId" />
            <label asp-for="@Model.ImePrezime">Radnik : <b>@Model.ImePrezime</b> </label>
        </div>
        <div class="form-group">
            <label asp-for="@Model.DatumIzdavanja">Datum izdavanja fakture : <b>@Model.DatumIzdavanja</b> </label>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Kupac">Kupac : </label>
            <input type="text" class="form-control" asp-for="@Model.Kupac" placeholder="Unesite ime kupca" required>
        </div>
        <div class="form-group">
            <label asp-for="@Model.PdvId">Iznos Pdv-a(%) : </label>
            <select asp-for="@Model.PdvId" asp-items="@Model.PdvList" class="form-control col-md-12" required="">
                <option value="">Odaberite porez</option>
            </select>
        </div>
        <div class="form-group">
            <label asp-for="@Model.RokPlacanja">Rok placanja : </label>
            <input type="date" class="form-control" asp-for="@Model.RokPlacanja" required>
        </div>
        <button type="submit" class="btn btn-success" style="float: right">Dodaj stavke</button>
    </form>
    <a class="btn btn-danger" asp-controller="Faktura" asp-action="Index" asp-route-radnikId="@Model.RadnikId">Nazad</a>

</div>



