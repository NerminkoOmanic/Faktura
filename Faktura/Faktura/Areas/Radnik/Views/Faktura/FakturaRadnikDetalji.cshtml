@model Faktura.Areas.Radnik.Models.RadnikDetailsVM
@{
    ViewData["Title"] = "Faktura";
    Layout = "_LayoutRadnik";
}

<div class="container">
    <div class="col-lg-2"></div>
    <div class="col-lg-8">
        <div class="form-group">
            <label class="col-sm-3 form-control">Ime : @Model.Fname </label>
        </div>
        <div class="form-group">
            <label class="col-sm-3 form-control">Prezime : @Model.Lname</label>
        </div>
        <div class="form-group">
            <label class="col-sm-5 form-control">Email : @Model.Email</label>
        </div>
        <div class="form-group">
            <label class="col-sm-5 form-control">JMBG(OIB)  : @Model.Jmbg</label>
        </div>
    </div>
</div>
<a class="btn btn-info  col-md-2 font-sizes float-right"
   asp-controller="Faktura" asp-action="Index" asp-route-radnikId="@Model.RadnikId">
    Back
</a>
<br />